{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true, // to node
        "es6": true, // to es6
        "mocha": true // to mocha test
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-indent": 0,
        "react/require-default-props": 0,
        "react/prop-types": 0,
        "react/destructuring-assignment": 0,
        "react/display-name": 0,

        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // warning about unused variables, ignore _varName
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "linebreak-style": 0,
        "indent": ["off", 4],
        "arrow-body-style": 0
    }
}
